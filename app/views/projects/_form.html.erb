      <% form.label :description %>
      <%= form.text_field :description, class:"form-control", placeholder:"description" %>
    </div>

    <div class="actions mt-2">
      <%= form.submit class:'btn btn-success mt-1' %>
    </div>
  </div>
</div>
<% end %>